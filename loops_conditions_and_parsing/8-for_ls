#!/usr/bin/env bash
# This script lists non-hidden files, showing only the part after the first dash

for file in *  # matches non-hidden files only
do
  # Extract part after the first dash using parameter expansion
  name_after_dash="${file#*-}"
  # Only display if the filename contains a dash
  if [ "$file" != "$name_after_dash" ]; then
    echo "$name_after_dash"
  fi
done
